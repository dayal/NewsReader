/* ============================== */
/* ! Layout for desktop version   */
/* ============================== */

  body {  
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #fff;
    background: url(/assets/bodybg.png) repeat;
	}

  .overall {
    width: 100%;
  }

  .header {
    text-align: center;
    box-shadow: 0px 1px 5px 0px black;
    background: url(/assets/headerbg.png) repeat-x;
  }

  .header .logo {
    display: block;
    float: left;
    height: 100px;
    background: url(/assets/nrdlogo.png) no-repeat;
  }

  .header .signin {
    padding-top: 30px; 
  }
  
  .header .profile {
    padding-top: 10px;
    height: 80px;
    width: 80px;
  }

  .midsection {
    background: #181818;
    width: 100%;
  }

  .sidebar {
    background: #181818
    height: 100%;
  }

  .imageblock img {
    background: #282828;
    width: 250px;
    height: 400px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
    border-style: none;
  }

  .imageblock img a {
    text-decoration: none;
    border-style: none;
  }
	

