%div.container
  %div.row
    %div.span9
      - @articles.each_slice(3) do |articles_group|
        %div
          - articles_group.each do |article|
            %div.boxgrid.caption
              = link_to image_tag(article.image_url), article_path(article), :class => "overlay"
              = image_tag(article.image_url)
              %div.boxcaption
                %div.textblock
                  %small
                    %strong Engadget
                  %p= "#{article.title}"
    %div.span3
