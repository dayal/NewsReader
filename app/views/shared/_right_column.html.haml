%div.well
  - if signed_in?
    %p Welcome back, #{current_user.name}!
    - if !pending_requests.empty?
      %p You have friend requests!
      %ul
        - pending_requests.each do |user|
          %li
            = user.name
            = link_to "Confirm?", friend_path(user), :method => "put"
    - if !current_user.news_lists.empty?
      %h4 Your NewsLists
      - current_user.news_lists.where(:is_private => false).each do |newslist|
        = render :partial => "shared/right_column_display_newslist", :locals => { :newslist => newslist }
      - if !current_user.news_lists.where(:is_private => true).empty?
        %p
          %i Privated
        - current_user.news_lists.where(:is_private => true).each do |newslist|
          = render :partial => "shared/right_column_display_newslist", :locals => { :newslist => newslist }
