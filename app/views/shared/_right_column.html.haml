%div.well
  - if signed_in?
    %p Welcome back, #{current_user.name}!
    - if !pending_requests.empty?
      %p You have friend requests!
      %ul
        - pending_requests.each do |user|
          %li
            = user.name
            = link_to "Confirm?", friend_path(user), :method => "put"
    - if !current_user.news_lists.empty?
      %h4 Your NewsLists
      - current_user.news_lists.each do |newslist|
        %div.btn-toolbar
          %div.btn-group
            = link_to newslist.name, user_news_list_path(current_user, newslist), :class => "btn"
            %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
              %span.caret
            %ul.dropdown-menu
              %li= link_to "Edit NewsList", edit_user_news_list_path(current_user, newslist)
              %li= link_to "Delete NewsList", user_news_list_path(current_user, newslist), :method => "DELETE"
