%div.container
  %div.row
    %div.span9
      %table.table
        %tr
          - if current_user?(@user)
            %td{:colspan => 2}
              = link_to "Edit Profile", edit_user_path(@user), :class => "pull-right btn"
              = link_to "Create NewsList", new_user_news_list_path(@user), :class => "pull-right btn"
          - else
            - if friend_with?
              %td{:colspan => 2}= link_to "Delete Friend", friend_path(profile_user), :method => "DELETE", :class => "pull-right btn"
            - elsif pending_invite?
              %td{:colspan => 2}
                %p.pull-right Invitation sent...
            - elsif pending_request?
              %td{:colspan => 2}= link_to "Confirm Request", friend_path(profile_user), :method => "put", :class => "pull-right btn"
            - else
              %td{:colspan => 2}= link_to "Add Friend", friends_path(:user_id => params[:id]), :method => "POST", :class => "pull-right btn"
        %tr
          %td.span2
            -if not @user.avatar.present?
              = image_tag ('/assets/emptyprofile.png'), :class => "img-polaroid" 
            -else
              = image_tag @user.avatar.url(:medium)    
          %td.span7
            %table.table
              %tr
                %td Name
                %td= @user.name
              %tr
                %td Email
                %td= @user.email
              - if !current_user.news_lists.empty?
                %tr
                %td{:colspan => 2}
                  %h5 NewsLists
                  %ul
                    - current_user.news_lists.each do |newslist|
                      - if !newslist.is_private
                        %li= link_to newslist.name, user_news_list_path(newslist)
              - if !@user.favorite_list.articles.empty?
                %tr
                %td{:colspan => 2}
                  %h5 Favorite Articles
                  %ul
                    - @user.favorite_list.articles.each do |article|
                      %li
                        = link_to article.title, article_path(article)
                        - if current_user?(@user)
                          |
                          = link_to "Delete", remove_article_user_favorite_list_path(current_user, article)
    %div.span3
      = render :partial => "shared/right_column"

